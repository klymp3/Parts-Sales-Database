@page
@using WebApplication1.Classes.DataBase
@model WebApplication1.Pages.AddClientModel
@{
    ViewData["Title"] = "Клиенты";
}


<p class="test">Клиенты</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Адрес</th>
            <th>Телефон</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Client client in Model.Clients)
        { 
            <tr>
                <td>@client.Id</td>
                <td>@client.Surname</td>
                <td>@client.Name</td>
                <td>@client.Address</td>
                <td>@client.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>



<form method="post">
	<p class="test">Добавление клиента</p>
	<hr />
    @if (ViewBag.NameError != null)
    {
        <br />
        <span class="except">@ViewBag.NameError</span>
    }
    <br />

	<div class="form-group">
        <label for="name" class="labeltest">Фамилия:</label>
        <input type="text" id="surname" name="surname" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="name" class="labeltest">Имя:</label>
        <input type="text" id="name" name="name" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="login" class="labeltest">Адрес:</label>
        <input type="text" id="address" name="address" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="password" class="labeltest">Номер телефона:</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" placeholder="+375 11 111 11 11" pattern="^\+375 ((29)||(44)||(33)||(25)) [0-9]{3} [0-9]{2} [0-9]{2}$" required>
    </div>

    <button type="submit" class="btn btn-primary testbutton" name="action" value="addNewClient">Добавить клиента</button>
</form>
